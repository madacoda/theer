# Server Configuration
PORT=3000
API_PORT=3001
NODE_ENV=production
FRONTEND_URL=http://localhost:1000

# Database Configuration
# Internal Docker: postgresql://${DB_USER}:${DB_PASSWORD}@db:5432/${DB_NAME}?schema=public
# External Access Port (DB_PORT): default 5432, changed to 5433 to avoid conflicts
DB_PORT=5433
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=mctheer
DATABASE_URL="postgresql://postgres:password@localhost:5433/mctheer?schema=public"

# RabbitMQ Configuration
# Internal Docker: amqp://${RABBITMQ_USER}:${RABBITMQ_PASSWORD}@rabbitmq:5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_URL="amqp://guest:guest@localhost:5672"

# AI Configuration (Google Generative AI)
GEMINI_API_KEY=your_api_key_here

# JWT Secret
JWT_SECRET=your_super_secret_key
